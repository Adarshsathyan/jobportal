<div class="">
	<div id="page-wrapper">
		<div class="header">
			<h1 class="page-header">
				Dashboard
			</h1>
			<ol class="breadcrumb">
				<li><a href="#">Dashboard</a></li>
				<li class="active">Data</li>
			</ol>

		</div>
		<div id="page-inner">
			<div style="display: none;">
				<P  id="rejected">{{rejected}}</P>
			</div>
			
			<div class="dashboard-cards">
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-4">

						<div class="card horizontal cardIcon waves-effect waves-dark">
							<div class="card-image" style="background-color: rgb(3, 65, 77);">
								<i class="material-icons dp48">import_export</i>
							</div>
							<div class="card-stacked" style="background-color: rgb(3, 65, 77);">
								<div class="card-content">
									<h3 id="requests">{{requests}}</h3>
								</div>
								<div class="card-action">
									<strong>REQUESTS</strong>
								</div>
							</div>
						</div>

					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">

						<div class="card horizontal cardIcon waves-effect waves-dark">
							<div class="card-image" style="background-color: black;">
								<i class="material-icons dp48">shopping_cart</i>
							</div>
							<div class="card-stacked" style="background-color: black;">
								<div class="card-content">
									<h3 id="jobs">{{jobs}}</h3>
								</div>
								<div class="card-action">
									<strong>TOTAL JOBS</strong>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">

						<div class="card horizontal cardIcon waves-effect waves-dark">
							<div class="card-image" style="background-color: rgb(23, 1, 119);">
								<i class="material-icons dp48">equalizer</i>
							</div>
							<div class="card-stacked" style="background-color: rgb(23, 1, 119);">
								<div class="card-content">
									<h3 id="approved">{{approved}}</h3>
								</div>
								<div class="card-action">
									<strong>APPROVED</strong>
								</div>
							</div>
						</div>

					</div>
					
				</div>
			</div>
			<!-- /. ROW  -->
			<div class="row">
				<div  class="col-md-6">
				<h4>Overall status</h4>
				<canvas  id="myChart" ></canvas>
				</div>
				<div  class="col-md-6"> 
				<h4>Job Application Status</h4>
				<canvas  id="jobChart" ></canvas>
				<script src="/employee/javascripts/graph.js"></script>
			</div>
			</div>
			
			
	
		</div>
		<!-- /. PAGE INNER  -->
	</div>
	<!-- /. PAGE WRAPPER  -->
	
</div>

